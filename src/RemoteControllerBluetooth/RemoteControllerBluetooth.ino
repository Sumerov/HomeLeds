void setup() {
	for(uint8_t i=0; i < BUTTONSCOUNT; i++) {
		pinMode( buttons[i], INPUT ); 
		buttonsStatus[i] = false;
		buttonsStatusOld[i] = false;
	}
	pinMode(HC05EN, OUTPUT);
	digitalWrite(HC05EN, HIGH);
    //Serial.begin(9600);  /*Baud rate UART communication */
    bluetooth.begin(9600);
	bluetooth.println("---------------------------------------------------------");
  	bluetooth.println("Lachtrup box - CAN exersizer");
  	bluetooth.println("Bluetooth remote control");
  	bluetooth.println("Created by J. Retych");
  	bluetooth.println("---------------------------------------------------------");
  	bluetooth.println("for help, please send letter: h");
  	bluetooth.println("---------------------------------------------------------");
    if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { /*I2C Address at which OLED will communicate*/
        Serial.println(F("SSD1306 allocation failed"));
        for(;;);
    }
    display.clearDisplay();  /*Clear display*/
    delay(20);
    display.drawBitmap(0, 0, epd_bitmap_Logo_Hella, 128, 32, WHITE);
    display.display();
	delay(500);
}

void readButtonsState() {
	for(uint8_t i=0; i < BUTTONSCOUNT; i++) {
		buttonsStatus[i] = digitalRead(buttons[i]);
	}
}

void printButtonsState() {
			
	for(uint8_t i=0; i < BUTTONSCOUNT; i++) {
			if(buttonsStatus[i]) {
				display.clearDisplay();
				display.display();
				display.setTextSize(2);
				display.setTextColor(WHITE);
				display.setCursor(0,0);
				display.print("(");
				display.print(i);
				display.print("): ");
				display.print(buttonsStatus[i]);
				display.print("|");
				buttonsStatusOld[i] = buttonsStatus[i];
				display.display();
				delay(1000);
			}

	}
}

void loop() {
	readButtonsState();
	printButtonsState();
    byte BluetoothData;
        //bluetooth.print("read: "); 
    if (bluetooth.available() > 0) {
        BluetoothData=bluetooth.read();
        bluetooth.print("read: ");   
        bluetooth.println(BluetoothData);
    }
    delay(100);
}